<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<% if (title) { %>
<h1><%= title %></h1>
<% } %>
<div class="account">
  <h2>Welcome <%= locals.accountData.account_firstname %></h2>

  <h3>Update Account Information</h3>
  <p>
    <a href="/account/update/<%= locals.accountData.account_id %>">Update Account</a>
  </p>

  <% if (locals.accountData.account_type !== "Client") { %>
        <h3>Inventory Management</h3>
        <p>
          <a href="/inv">Update Inventory</a>
        </p>
  <% } %>
</div>
