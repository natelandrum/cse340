<% if (title) { %>
<h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="addVehicle">
  <form action="/inv/add-vehicle" method="POST">
      <h2>All fields are required</h2>

      <label>
          Classification Name
          <select name="classification_id" id="classification" required>
            <%- classifications %>
        </select>
            
      </label>
      <label>
          Make
          <input type="text" id="make" name="inv_make" required pattern=".{3,}"
          placeholder="Min 3 characters"
          value="<%- locals.inv_make %>">
      </label>
      <label>
          Model
          <input type="text" id="model" name="inv_model" required pattern=".{3,}"
          placeholder="Min 3 characters"
          value="<%- locals.inv_model %>">
      </label>
      <label>
          Description
          <textarea id="description" name="inv_description" rows="4" required
          ><%- locals.inv_description %></textarea>
      </label>
      <label>
          Image Path
          <input type="text" id="image_path" name="inv_image" required
          value="<%- locals.inv_image %>">
      </label>
      <label>
          Thumbnail Path
          <input type="text" id="thumbnail_path" name="inv_thumbnail" required
          value="<%- locals.inv_thumbnail %>">
      </label>
      <label>
          Price
          <input type="number" step="0.01" id="price" name="inv_price" required
          placeholder="Decimal or integer"
          value="<%- locals.inv_price %>">
      </label>
      <label>
          Year
          <input type="text" id="year" name="inv_year" required pattern="\d{4}"
          placeholder="4 digits"
          value="<%- locals.inv_year %>">
      </label>
      <label>
          Miles
          <input type="number" step="1" id="miles" name="inv_miles" required
          value="<%- locals.inv_miles %>">
      </label>
      <label>
          Color
          <input type="text" id="color" name="inv_color" required
          value="<%- locals.inv_color %>">
      </label>
      <button type="submit">Add Vehicle</button>
  </form>
</div>
